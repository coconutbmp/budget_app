<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/ReturnCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                app:cardBackgroundColor="@color/smokey_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:contentPadding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/budget_title_label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/convergence"
                android:text="What are You Adding?"
                android:textColor="@color/grey"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:minHeight="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Income"
                android:textSize="24sp" />

            <Button
                android:id="@+id/add_income_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:backgroundTint="@color/smokey_white"
                android:contentDescription="@string/create_cat"
                android:fontFamily="@font/convergence"
                android:text="Add"
                android:textAllCaps="false"
                app:cornerRadius="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:minHeight="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Liability"
                android:textSize="24sp" />

            <Button
                android:id="@+id/add_liability_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:backgroundTint="@color/smokey_white"
                android:contentDescription="@string/create_cat"
                android:fontFamily="@font/convergence"
                android:text="Add"
                android:textAllCaps="false"
                app:cornerRadius="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:minHeight="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Transaction"
                android:textSize="24sp" />

            <Button
                android:id="@+id/add_transaction_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:backgroundTint="@color/smokey_white"
                android:contentDescription="@string/create_cat"
                android:fontFamily="@font/convergence"
                android:text="Add"
                android:textAllCaps="false"
                app:cornerRadius="16dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>